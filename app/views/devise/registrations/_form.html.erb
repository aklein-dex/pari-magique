
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <h2>Edit <%= resource.role %> <%= current_user.username %></h2>

  <%= devise_error_messages! %>

  <div class="form-group row">
    <%= f.label :email, class: "col-md-2 col-xs-12 col-form-label" %>
    <div class="col-10">
      <%= f.email_field :email, autofocus: true, class: "form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label :time_zone, class: "col-md-2 col-xs-12 col-form-label" %>
    <div class="col-10">
      <%= f.time_zone_select :time_zone, nil, {:default => "UTC"}, {class: 'form-control'} %>
    </div>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="form-group row">
    <%= f.label :password, class: "col-md-2 col-xs-12 col-form-label" %>
    <div class="col-10">
      <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
      <small id="emailHelp" class="form-text text-muted">
        <% if @minimum_password_length %>
        <br />
        <em><%= @minimum_password_length %> characters minimum</em>
      <% end %>
      (leave blank if you don't want to change it).
      </small>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label :password_confirmation, class: "col-md-2 col-xs-12 col-form-label" %>
    <div class="col-10">
      <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label :current_password, class: "col-md-2 col-xs-12 col-form-label" %>
    <div class="col-10">
      <%= f.password_field :current_password, autocomplete: "off", class: "form-control" %>
      <small id="emailHelp" class="form-text text-muted">
        We need your current password to confirm your changes.
     </small>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-md-2"></div>
    <div class="col-10">
      <%= f.submit "Update", class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
