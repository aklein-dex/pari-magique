<% provide(:title,  @tournament.name) %>
<div class="container">


<h1><%= @tournament.name %>, <%= @tournament.location %></h1>

<div class="btn-group" role="group" aria-label="Basic example">
  <%= link_to 'Group A', league_tournament_group_path(@league, @tournament, "A"), class: "btn btn-secondary" %>
  <%= link_to 'Group B', league_tournament_group_path(@league, @tournament, "B"), class: "btn btn-secondary" %>
  <%= link_to 'Group C', league_tournament_group_path(@league, @tournament, "C"), class: "btn btn-secondary" %>
  <%= link_to 'Group D', league_tournament_group_path(@league, @tournament, "D"), class: "btn btn-secondary" %>
  <%= link_to 'Group E', league_tournament_group_path(@league, @tournament, "E"), class: "btn btn-secondary" %>
  <%= link_to 'Group F', league_tournament_group_path(@league, @tournament, "F"), class: "btn btn-secondary" %>
  <%= link_to 'Group G', league_tournament_group_path(@league, @tournament, "G"), class: "btn btn-secondary" %>
  <%= link_to 'Group H', league_tournament_group_path(@league, @tournament, "H"), class: "btn btn-secondary" %>
  <button type="button" class="btn btn-secondary">Round of 16</button>
  <button type="button" class="btn btn-secondary">Quarter-finals</button>
  <button type="button" class="btn btn-secondary">Semi-finals</button>
  <button type="button" class="btn btn-secondary">Finale</button>
</div>
<br>
<br>

<%= link_to league_tournament_guesses_path(@league, @tournament), class: "btn btn-success" do %>
  <%= icon("book") %> Past Guesses
<% end %>
<br>
<br>

<%= render partial: 'games', locals: { games: @coming_games, title: "Next 5 coming games" } %>
<br>


<%= render partial: 'games', locals: { games: @last_games, title: "Past 5 games" } %>
<br>

<%= render 'ranking' %>


</div>
