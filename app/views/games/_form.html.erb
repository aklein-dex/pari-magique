<%= form_with(model: game, local: true) do |form| %>
  <% if game.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(game.errors.count, "error") %> prohibited this game from being saved:</h2>

      <ul>
      <% game.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :tournament_id %>
    <%= form.collection_select(:tournament_id, Tournament.all, :id, :name) %>
  </div>

  <div class="field">
    <%= form.label :home_id %>
    <%= form.collection_select(:home_id, Team.all, :id, :name) %>
  </div>

  <div class="field">
    <%= form.label :away_id %>
    <%= form.collection_select(:away_id, Team.all, :id, :name) %>
  </div>

  <div class="field">
    <%= form.label :result %>
    <%= form.text_field :result, id: :game_result %>
  </div>

  <div class="field">
    <%= form.label :schedule %>
    <%= form.datetime_select :schedule, id: :game_schedule %>
  </div>

  <div class="field">
    <%= form.label :stage %>
    <%= form.select :stage, Game.stages.keys, id: :game_stage %>
  </div>

  <div class="field">
    <%= form.label :pool %>
    <%= form.select :pool, Game.pools.keys, id: :game_pool %>
  </div>

  <div class="field">
    <%= form.label :stadium_id %>
    <%= form.collection_select(:stadium_id, Stadium.all, :id, :name) %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
