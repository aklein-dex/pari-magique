
<%= form_with(model: [:admin, @user], local: true) do |f| %>
  <h2><%= @user.username %> (<%= @user.email %>)</h2>

  <div class="form-group row">
    <%= f.label :username, class: "col-md-2 col-xs-12 col-form-label" %>
    <div class="col-10">
      <%= f.text_field :username, autofocus: true, class: "form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label :role, class: "col-md-2 col-xs-12 col-form-label" %>
    <div class="col-10">
      <%= f.select :role, User.roles.keys.map {|k| [k, k]}, {}, {class: "form-control"} %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label :time_zone, class: "col-md-2 col-xs-12 col-form-label" %>
    <div class="col-10">
      <%= f.time_zone_select :time_zone, nil, {:default => "UTC"}, {class: 'form-control'} %>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-md-2"></div>
    <div class="col-10">
      <%= f.submit "Update", class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
