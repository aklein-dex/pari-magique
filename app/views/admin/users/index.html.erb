<% provide(:title, 'All users') %>
<div class="container">
<h1>All users</h1>

<ul class="users list-group">
  <% @users.each do |user| %>
      <li class="list-group-item">
        <%= gravatar_for user, size: 50 %>
        <%= link_to user.username, [:admin, user] %> (<%= user.email %>)
      </li>
  <% end %>
</ul>
</div>
